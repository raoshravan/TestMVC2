@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<MvcDemo.DataDb.AllEmployeeswithDp_Result>

@{
    ViewBag.Title = "All Employee Data";

}
<html>
<head>
    <title> "All Employee Data"</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css">

</head>
<body>
<h2>All Employee Data</h2>
    <br />
    <div>
        <table id="example" class="table table-responsive table-hover table-striped table-bordered tablesorter" >
            <thead><tr><th>Employee ID</th><th>Name</th><th><b>City</b></th><th><b>Gender</b></th><th><b>Email</b></th><th><b>Salary</b></th><th class="nosort"><b>Personal Website</b></th><th><b>Department Names</b></th></tr></thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="8">No rows match search Criteria</td></tr>
                }
                else
                {
                    foreach (var emp in Model)
                    {
                        <tr><td>@emp.EmployeeId</td><td>@emp.Name</td><td>@emp.City</td><td>@emp.Gender</td><td>@emp.EmailId</td><td>@emp.Salary</td><td><a href="http://@emp.PersonalWebsite" target="_blank">@emp.PersonalWebsite</a></td><td>@emp.DepartmentName</td></tr>
                    }
                }

            </tbody>
        </table>

        @Html.ActionLink("Create new Employee", "Create")
        <br>
        @Html.ActionLink("Edit/Delete Employee", "Delete")
        <br>
        @Html.ActionLink("Delete Multiple Employee", "DeleteMultiple")
    </div>
    </body>
</html>
